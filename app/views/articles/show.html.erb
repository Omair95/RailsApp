<h1> Showing all articles </h1>
<p>
  <%= link_to "Create new article", articles_new_path %>
</p>

<table>
  <tr>
    <th> Title </th>
    <th> Description </th>
  </tr>

  <% @article.each do |article| %>
  <tr>
    <td> <%= article.title %> </td>
    <td> <%= article.description %></td>
    <td> <%= link_to 'Edit', articles_edit_path(article) %></td>
    <td> <%= link_to 'Show', articles_path(article) %></td>
    <td> <%= link_to 'Delete', articles_path(article), method: :delete, data: { confirm: "Are you sure" } %></td>
  </tr>
      <% end %>
</table>